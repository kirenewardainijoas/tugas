<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
   <androidx.appcompat.widget.Toolbar
       android:background="#96CCB1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_marginRight="20dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <Button
               android:background="@drawable/kiri"
               android:layout_width="30dp"
               android:layout_height="30dp"/>
           <LinearLayout
                android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <Button
               android:background="@drawable/menu"
               android:layout_width="30dp"
               android:layout_height="30dp"/>
       </LinearLayout>
   </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/backgound_hijau"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:src="@drawable/profile"
                android:layout_width="95dp"
                android:layout_height="95dp"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    android:text="Kirene  "
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textSize="10dp"
                    android:textColor="#FFFFFF"
                    android:drawableLeft="@drawable/lokasi"
                    android:text="Perumahan Arjuna Gumilang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:textAllCaps="false"
                android:backgroundTint="#FFFFFF"
                android:text="Follow"
                android:layout_width="70dp"
                android:layout_height="50dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <LinearLayout
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="50dp">
            <TextView
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"
                android:text="10K"
                android:textColor="#FFFFFF"
                android:layout_width="60dp"
                android:layout_height="20dp"/>
            <TextView
                android:gravity="center"
                android:text="follower"
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                android:layout_width="55dp"
                android:layout_height="20dp"/>
        </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="50dp">
                <TextView
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="500"
                    android:textColor="#FFFFFF"
                    android:layout_width="60dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:gravity="center"
                    android:text="following"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:layout_width="60dp"
                    android:layout_height="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="50dp">
                <TextView
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="#FFFFFF"
                    android:layout_width="60dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:gravity="center"
                    android:text="unfollow"
                    android:textSize="14dp"
                    android:textColor="#FFFFFF"
                    android:layout_width="55dp"
                    android:layout_height="20dp"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="Aplikasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#9CEFEE"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/background"
                    android:layout_width="150dp"
                    android:layout_height="100dp">
                    <ImageView
                        android:src="@drawable/img1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"/>
                    <TextView
                        android:text="Spotivy"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#9CEFEE"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/background"
                    android:layout_width="150dp"
                    android:layout_height="100dp">
                    <ImageView
                        android:src="@drawable/img2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"/>
                    <TextView
                        android:text="Netflix"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#9CEFEE"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/background"
                    android:layout_width="150dp"
                    android:layout_height="100dp">
                    <ImageView
                        android:src="@drawable/img3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"/>
                    <TextView
                        android:text="Pinterest"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#9CEFEE"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/background"
                    android:layout_width="150dp"
                    android:layout_height="100dp">
                    <ImageView
                        android:src="@drawable/img4"
                        android:layout_width="75dp"
                        android:layout_height="75dp"/>
                    <TextView
                        android:text="Wattpad"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

<LinearLayout
    android:layout_marginTop="50dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:text="Keluar"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_width="100dp"
        android:layout_height="50dp"/>
</LinearLayout>


</LinearLayout>